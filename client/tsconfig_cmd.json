{
  "compilerOptions": {
    "target": "es2021",
    // "lib": [
    //   "es2015"
    // ],
    "module": "commonjs",
    "moduleResolution": "Node",
    "strict": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "strictPropertyInitialization": false,
    "allowJs": false,
    "declaration": true,
    "sourceMap": false,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "outDir": "./cmd"
  },
  "include": [
    "./src/cmd/"
  ],
  "exclude": [
    "node_modules",
    "src/*.ts",
    "*.spec.ts"
  ]
}